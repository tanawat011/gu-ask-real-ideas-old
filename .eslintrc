{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:@next/next/recommended",
    "eslint:recommended",
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "ignorePatterns": [
    "/build/*",
    "/coverage/*",
    "/dist/*",
    "/libs/*",
    "node_modules"
  ],
  "rules": {
    "no-unused-vars": "error",
    "prettier/prettier": "error"
  }
}
