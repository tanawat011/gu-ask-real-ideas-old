{
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Tell VSCode to use Prettier as default file formatter
  "editor.formatOnSave": true, // Tell VSCode to format files on save
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true, // Tell VSCode to auto fix our code with eslint
    "source.fixAll.stylelint": true // Tell VSCode to auto fix our css code with stylelint
  },
  "cSpell.words": [],

  // ESLint with Prettier
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "typescript"
  ],

  // Stylelint with Prettier
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.validate": [
    "css",
    "scss"
  ]
}
